$LOAD_PATH << File.dirname(__FILE__)
$LOAD_PATH << File.join(File.dirname(__FILE__), '..')

require 'vnmmad'
require 'vlan_tag_driver'

template64   = STDIN.read
deploy_id    = ARGV[0]
vn_id        = Integer(ARGV[1])

xpath_filter = VLANTagDriver::XPATH_FILTER

begin
    # PRE - Related changes
    hm = VLANTagDriver.from_base64(template64, xpath_filter, deploy_id)
    hm.update(vn_id)

    # POST - Related changes
    filter_driver = VNMMAD::VNMDriver.filter_driver(template64,
                                                    xpath_filter,
                                                    deploy_id)
    filter_driver.update(vn_id)

    # VF - Related changes
    filter_driver.update_vf(filter_driver.vm, vn_id)
rescue StandardError => e
    OpenNebula.log_error(e.message)
    OpenNebula.log_error(e.backtrace)
    exit 1
end
