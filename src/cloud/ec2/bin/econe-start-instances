ONE_LOCATION=ENV["ONE_LOCATION"]

if !ONE_LOCATION
    RUBY_LIB_LOCATION="/usr/lib/one/ruby"
else
    RUBY_LIB_LOCATION=ONE_LOCATION+"/lib/ruby"
end

$: << RUBY_LIB_LOCATION
$: << RUBY_LIB_LOCATION+"/cloud"


require 'cli/command_parser'
require 'cli/cli_helper'
require 'econe/EC2QueryClient'

include CloudCLI


CommandParser::CmdParser.new(ARGV) do
    usage "econe-start-instances [OPTIONS] INSTANCE-ID[,INSTANCE-ID...]"
    version CloudCLI.version_text
    description <<-EOT
Start the selected stopped instance
INSTANCE-ID: The instance identification as returned by the econe-run-instances command
EOT

    option [
        CommandParser::VERBOSE,
        CommandParser::HELP,
        CommandParser::VERSION,
        EC2QueryClient::ACCESS_KEY,
        EC2QueryClient::SECRET_KEY,
        EC2QueryClient::URL
    ]

    format :instance_id, "The IDs of instances, comma-separated" do |arg|
        [0, arg.split(',')]
    end

    main :instance_id do
        begin
            ec2_client = EC2QueryClient::Client.new(
                options[:access_key],
                options[:secret_key],
                options[:url])
        rescue Exception => e
            puts "#{cmd_name}: #{e.message}"
            exit -1
        end

        rc = ec2_client.start_instances(args[0])

        if CloudClient::is_error?(rc)
            exit_with_code -1, "#{cmd_name}: #{rc.message}"
        else
            rc['instancesSet']['item'].each { |result|
                puts "Success: Starting #{result['instanceId']} in " <<
                    "#{result['previousState']['name']} state"
            }

            exit_with_code 0
        end
    end
end
