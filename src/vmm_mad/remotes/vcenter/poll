ONE_LOCATION = ENV['ONE_LOCATION'] unless defined?(ONE_LOCATION)

if !ONE_LOCATION
    RUBY_LIB_LOCATION = '/usr/lib/one/ruby' unless defined?(RUBY_LIB_LOCATION)
else
    RUBY_LIB_LOCATION = ONE_LOCATION + '/lib/ruby' unless defined?(RUBY_LIB_LOCATION)
end

$LOAD_PATH << RUBY_LIB_LOCATION
$LOAD_PATH << File.dirname(__FILE__)

require 'vcenter_driver'

vm_ref          = ARGV[0]
vc_cluster_name = ARGV[1]
vm_id           = ARGV[2]

host    = VCenterDriver::VIHelper.find_by_name(OpenNebula::HostPool,
                                               vc_cluster_name)
host_id = host['ID']

begin
    vi_client = VCenterDriver::VIClient.new_from_host(host_id)
    vm = VCenterDriver::VirtualMachine.new(vi_client, vm_ref, vm_id)

    vm.monitor_poll_vm

    puts vm.info
rescue StandardError => e
    message = "Cannot poll info for VM #{vm_ref} with OpenNebula id #{vm_id}" \
              " on vCenter cluster #{vc_cluster_name} failed due to " \
              "\"#{e.message}\"."
    OpenNebula.log_error(message)
    if vi_client.get_property_vcenter_conf(:debug_information)
        STDERR.puts "#{message} #{e.backtrace}"
    end
    exit(-1)
ensure
    vi_client.close_connection if vi_client
end
