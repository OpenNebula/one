ONE_LOCATION = ENV['ONE_LOCATION']

if !ONE_LOCATION
    RUBY_LIB_LOCATION = '/usr/lib/one/ruby'
else
    RUBY_LIB_LOCATION = ONE_LOCATION + '/lib/ruby'
end

$LOAD_PATH << RUBY_LIB_LOCATION
require File.expand_path('../../im/lib/kvm_qemu_ga', __dir__)

require 'shellwords'

begin
    vm_id, _dst_host, esc_cmd, cmd_stdin = ARGV
    cmd_str = Shellwords.shellsplit(esc_cmd).join(' ')
    cmd, *args = Shellwords.shellsplit(cmd_str)

    VirshWrapper.lock_exec do
        pid = VirshWrapper.guest_exec(
            "one-#{vm_id}",
            cmd,
            args,
            :input_data => cmd_stdin
        )

        File.write("/var/run/one/one-#{vm_id}", pid.to_s)
    end

    exit 0
rescue StandardError => e
    STDERR.puts "Error executing the command: #{e.message}"
    STDERR.puts e.backtrace.to_s
    exit(1)
end
