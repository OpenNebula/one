t0 = Time.now
require_relative 'lib/lxd_driver'

LXDriver.log_init

vm_name = ARGV[0]
vm_id = ARGV[2]

client = LXDClient.new
container = Container.get(vm_name, client)

info = LXDriver.deployment_get(container)

if ARGV.include?('force')
    container.stop(:force => true)
else
    container.stop
end

begin
    LXDriver.container_storage(info, 'unmap')
rescue StandardError => e
    container.start
    raise e
end

container.delete

LXDriver.log_end(t0)
