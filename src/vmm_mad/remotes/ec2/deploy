$: << File.dirname(__FILE__)

require 'ec2_driver'

dfile = ARGV[0]
host  = ARGV[1]
id    = ARGV[2]

ec2_drv = EC2Driver.new(host)

text=File.read(dfile)

puts ec2_drv.deploy(id, host, text)

exit 0

