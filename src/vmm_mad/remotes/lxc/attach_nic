require_relative 'container'

# vm_name  = ARGV[0]
mac = ARGV[1]
# bridge   = ARGV[2]
# model    = ARGV[3]
# net_drv  = ARGV[4]
# nic_host = ARGV[5]

# vm_id = ARGV[6]
# host  = ARGV[7]

xml = STDIN.read

client    = LXCClient.new
container = Container.new_from_xml(xml, client)

exit(-1) unless container.attach_nic(mac)
