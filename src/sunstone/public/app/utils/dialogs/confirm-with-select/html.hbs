<div id="{{dialogId}}" class="reveal" data-reveal>
  <div class="row">
    <h3 class="subheader">
      {{tr "Confirm"}}
      <br>
      &emsp;
      <small class="confirm_action"></small>
    </h3>
  </div>
  <form action="">
    <div class="row">
      <div id="confirm_with_select_tip">{{tr "You need to select something."}}</div>
    </div>
    <br />
    <div class="row">
      <div class="large-12 columns" id="confirm_select"></div>
    </div>
    <br />
    <br />
    <div class="form_buttons">
      <button id="confirm_with_select_proceed" class="action_button button right" data-close value="">{{tr "OK"}}</button>
    </div>
    <button class="close-button" data-close aria-label="{{tr "Close modal"}}" type="button">
      <span aria-hidden="true">&times;</span>
    </button>
  </form>
</div>
