<div class="row">
  <div class="large-12 columns">
    <table class="dataTable policies_table {{classTable}}">
      <thead>
        <tr>
          <th>{{#if titleKey }}{{titleKey}}{{else}}{{tr "Key"}}{{/if}}</th>
          {{#if titleMandatory }}<th>{{titleMandatory}}</th>{{/if}}
          <th>{{#if titleValue }}{{titleValue}}{{else}}{{tr "Value"}}{{/if}}</th>
          {{#if titleDesc }}<th>{{titleDesc}}</th>{{/if}}
          {{#if titleDefault }}<th>{{titleDefault}}</th>{{/if}}
          <th></th>
        </tr>
      </thead>
      <tbody class="custom_tags">
      </tbody>
      <tfoot>
        <tr>
          <td colspan="5">
            <a type="button" class="add_custom_tag {{classButton}} button small small-12 secondary radius">
              <i class="fas fa-lg fa-plus-circle"></i>
            </a>
          </td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>
