<div id="{{dataTableId}}Container">
  {{! TODO: show also refresh and search box when {info: true} is used in panels}}
  {{#if conf.select}}
  <div class="row select-resources">
    <div class="small-12 medium-6 columns" id="selected_ids_row_{{dataTableId}}">
      <label for="selected_resource_id_{{dataTableId}}" id="select_resource_{{dataTableId}}">{{selectOptions.select_resource}}</label>
      <span id="selected_resource_{{dataTableId}}" hidden>{{selectOptions.you_selected}}</span>
      <span id="select_resource_multiple_{{dataTableId}}"  hidden>{{selectOptions.select_resource_multiple}}</span>
      <span id="selected_resource_multiple_{{dataTableId}}" hidden>{{selectOptions.you_selected_multiple}}</span>
      <span id="selected_resource_name_{{dataTableId}}" class="radius label"></span>
      <input id="selected_resource_id_{{dataTableId}}" type="text" style="visibility: hidden; width:0px !important; height:0px !important;padding: 0px !important;margin: 0px !important;display: inline;"/>
    </div>
    <div class="small-10 medium-4 columns right">
      <input id="{{dataTableId}}_search" class="search" type="search" placeholder="{{tr "Search"}}"/>
    </div>
    <div class="small-2 columns right">
      <a id="refresh_button_{{dataTableId}}" href="#" class="refresh-table right"> <i class="fas fa-lg fa-fw fa-sync-alt" /></a>
    </div>
  </div>
  {{/if}}
  <table id="{{dataTableId}}" class="hover">
    <thead>
      <tr>
        <th class="check">
          <input style="vertical-align: inherit;" type="checkbox" class="check_all" value=""/>
          <span style="display: table; float:left; margin-right: 3px; width: 5px; height: 20px; background: transparent;"></span>
        </th>
        {{#each columns}}
        <th>{{this}}</th>
        {{/each}}
      </tr>
    </thead>
    <tbody></tbody>
  </table>
</div>
