<div id="{{containerId}}">
  <ul id="{{containerId}}Tabs" class="tabs sunstone-info-tabs text-center" data-tabs>
    {{#each panels}}
    <li class="tabs-title {{#if active}}is-active{{/if}}">
      <a href="#{{panelName}}">
        {{#if icon}}
          <i class="fas {{icon}}"></i>
          <br>
        {{/if}}
        {{title}}
      </a>
    </li>
    {{/each}}
  </ul>
  <div class='tabs-content' data-tabs-content="{{containerId}}Tabs">
    {{#each panels}}
    <div id="{{panelName}}" class="tabs-panel {{#if active}}is-active{{/if}}">
      {{{html}}}
    </div>
    {{/each}}
  </div>
</div>
