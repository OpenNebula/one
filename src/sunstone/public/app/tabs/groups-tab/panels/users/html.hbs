{{#isTabActionEnabled "groups-tab" "Group.edit_admins"}}
  <div class="row">
    <div class="medium-4 small-10 columns right">
      <span>
        <button class="button secondary small radius" id="edit_admins_button" style="width: 100%;">
          <span class="fas fa-edit"></span> {{tr "Edit administrators"}}
        </button>
        <button class="button alert small radius" id="cancel_admins_button" style="display: none">
          {{tr "Cancel"}}
        </button>
        <button class="button success small radius" id="submit_admins_button" style="display: none">
          {{tr "Apply"}}
        </button>
      </span>
    </div>
  </div>
{{/isTabActionEnabled}}
<div class="group_users_info_table">
  {{{usersTableHTML}}}
</div>
<div class="row">
  <p>{{{tr "Users marked with <i class='fas fa-star'></i> are administrators"}}}
</div>


