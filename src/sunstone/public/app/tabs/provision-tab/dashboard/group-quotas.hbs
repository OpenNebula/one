<fieldset class="large-12 columns dashboard-fieldset">
<div class="row">
  <div class="large-12 columns dashboard-div-titles">
    <div class="small-6 medium-8 columns">
      <h5>{{tr "Group Quotas"}}</h5>
    </div>
  </div>
</div>
<div class="row">
  <div class="large-11 medium-12 large-centered columns">
    <div class="row">
      <div class="large-4 medium-4 columns text-center">
        <h3>
          <span id="provision_dashboard_group_rvms_percentage">0</span>
          <small>%</small>
        </h3>
        <meter id="provision_dashboard_group_rvms_meter" min="0" low="33" high="66" optimum="0" max="100"></meter>
        <h6>
          <span id="provision_dashboard_group_rvms_str"></span>
          <br>
          <span class="subheader">{{tr "RUNNING VMS"}}</span>
        </h6>
      </div>
      <div class="large-4 medium-4 columns text-center">
        <h3>
          <span id="provision_dashboard_group_cpu_percentage">0</span>
          <small>%</small>
        </h3>
        <meter id="provision_dashboard_group_cpu_meter" min="0" low="33" high="66" optimum="0" max="100"></meter>
        <h6>
          <span id="provision_dashboard_group_cpu_str"></span>
          <br>
          <span class="subheader">{{tr "CPU"}}</span>
        </h6>
      </div>
      <div class="large-4 medium-4 columns text-center">
        <h3>
          <span id="provision_dashboard_group_memory_percentage">0</span>
          <small>%</small>
        </h3>
        <meter id="provision_dashboard_group_memory_meter" min="0" low="33" high="66" optimum="0" max="100"></meter>
        <h6>
          <span id="provision_dashboard_group_memory_str"></span>
          <br>
          <span class="subheader">{{tr "MEMORY"}}</span>
        </h6>
      </div>
    </div>
  </div>
</div>
</fieldset>