<div class="row">
  <div class="large-6 columns">
    <table class="dataTable" cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>{{tr "App template"}}</th>
          <th>
            <a class="appTemplate_edit right" href="#"><i class="fas fa-edit"></i></a>
          </th>
        </tr>
      </thead>
    </table>
    <textarea class="monospace" rows="6" type="text" id="appTemplate_textarea" hidden placeholder='ATTRIBUTE = "VALUE"'>{{appTemplate}}</textarea>
      {{#if appTemplate}}
        <pre id="appTemplate_text" class="info_text">
        {{~appTemplate~}}
        </pre>
      {{else}}
        <p id="appTemplate_text" class="info_text">
        {{~tr "You can provide a template for the resource that will be created in OpenNebula"~}}
        </p>
      {{/if}}
  </div>
  <div class="large-6 columns">  
    <table class="dataTable" cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>{{tr "VM template"}}</th>
          <th>
            <a class="vmTemplate_edit right" href="#"><i class="fas fa-edit"></i></a>
          </th>
        </tr>
      </thead>
    </table>
    <textarea class="monospace" rows="6" type="text" id="vmTemplate_textarea" hidden placeholder='ATTRIBUTE = "VALUE"'>{{vmTemplate}}</textarea>
      {{#if vmTemplate}}
        <pre id="vmTemplate_text" class="info_text">
        {{~vmTemplate~}}
        </pre>
      {{else}}
        <p id="vmTemplate_text" class="info_text">
        {{~tr "You can provide a VM template associated to the resource that will be created in OpenNebula"~}}
        </p>
      {{/if}}
  </div>
</div>
