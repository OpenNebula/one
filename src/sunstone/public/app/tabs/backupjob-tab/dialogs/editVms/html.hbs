<div id="{{dialogId}}" class="reveal large" data-reveal>
  <div class="row">
    <div class="large-12 columns">
      <h3 class="subheader" id="">{{tr "Select VMs"}}</h3>
    </div>
  </div>
  <div class="confirm-resources-header"></div>
  <div class="reveal-body">
    <form id="{{dialogId}}Form" action="">
      {{{vmsTabHTML}}}
      <label for="vmsOrdered" >
        {{tr "VM List (ordered)"}}
        <span class="tip">
          {{tr "The order of this list is crucial as it determines the sequence of backup operations."}}
        </span>
      </label>
      <input type="text" name="vmsOrdered" id="vmsOrdered", value="{{vms}}"/>
      <div class="reveal-footer">
        <div class="form_buttons">
          <button class="button radius right success" id="attach_disk_button" type="submit">{{tr "Edit"}}</button>
        </div>
      </div>
      <button class="close-button" data-close aria-label="{{tr "Close modal"}}" type="button">
        <span aria-hidden="true">&times;</span>
      </button>
    </form>
  </div>
</div>
