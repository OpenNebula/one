<div id="{{dialogId}}" class="reveal small" data-reveal>
  <div class="row">
    <div class="large-12 columns">
      <h3 class="subheader" id="">{{tr "Disk Resize"}}</h3>
    </div>
  </div>
  <div class="confirm-resources-header"></div>
  <div class="reveal-body">
    <form id="{{dialogId}}Form" action="">
      <div class="row">
        <div class="large-6 columns">
          <label for="disk_id">{{tr "Disk ID"}}</label>
          <input style="border-style: inset; background-color: lightgrey" type="text" name="disk_id" id="disk_id" disabled/>
        </div>
      </div>
      <div class="row disksContext">
        <div class="large-12 columns">
          <label for="resize_disk">{{tr "New size"}}</label>
          <div class="large-12 columns diskSlider" id="diskSlider_resize"></div>
        </div>
      </div>
      <div class="row">
        <div class="large-6 columns">
          <span>
            <span id="new_cost_resize">{{tr "Cost"}}:</span>
            <small>{{tr "COST"}} / {{tr "MONTH"}}</small>
          </span>
        </div>
      </div>
      <div class="form_buttons">
        <button class="button radius right success" type="submit">{{tr "Resize"}}</button>
      </div>
      <button class="close-button" data-close aria-label="{{tr "Close modal"}}" type="button">
        <span aria-hidden="true">&times;</span>
      </button>
    </form>
  </div>
</div>
