<div class="row">
  <div class="small-12 columns">
    {{#isTabActionEnabled "vms-tab" "VM.updateconf"}}
    <span class="right">
      <button id="vm_updateconf" class="button success right radius small">
        {{tr "Update Configuration"}}
      </button>
    </span>
    {{/isTabActionEnabled}}
  </div>
</div>
<div class="row">
  {{#each conf}}
  <div class="medium-6 columns">
    <table class="dataTable">
      <thead>
        <tr>
          <th colspan="2">{{@key}}</th>
        </tr>
      </thead>
      <tbody>
        {{#each this}}
        <tr>
          <td class="key_td">{{@key}}</td>
          <td class="value_td">{{this}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{/each}}
</div>