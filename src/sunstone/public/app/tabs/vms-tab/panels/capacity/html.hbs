<div class="row">
  <div class="large-9 columns">
    <table class="info_table dataTable">
      <thead>
        <tr>
          <th>{{tr "CPU"}}</th>
          <th>{{tr "VCPU"}}</th>
          <th>{{tr "MEMORY"}}</th>
          {{#isFeatureEnabled "showback"}}
          <th>{{tr "Cost / CPU"}}</th>
          <th>{{tr "Cost / MByte"}}</th>
          {{/isFeatureEnabled}}
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td id="cpu_info">{{valOrDefault element.TEMPLATE.CPU '-'}}</td>
          <td id="vcpu_info">{{valOrDefault element.TEMPLATE.VCPU '-'}}</td>
          <td id="memory_info">{{humanizeSize "MB" element.TEMPLATE.MEMORY}}</td>
          {{#isFeatureEnabled "showback"}}
          <td id="cpu_cost_info">{{cpuCost}}</td>
          <td id="memory_cost_info" >{{memoryCost}}</td>
          {{/isFeatureEnabled}}
          <td>
          {{#isTabActionEnabled "vms-tab" "VM.resize"}}
          {{#if resizeStateEnabled}}
            <button id="resize_capacity" class="button tiny success right radius" >{{tr "Resize"}}</button>
          {{else}}
            <button id="resize_capacity" class="button tiny success right radius" disabled="disabled">{{tr "Resize"}}</button>
          {{/if}}
          {{/isTabActionEnabled}}
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="medium-6 columns">
    <div class="row text-center">
      <div class="large-12 columns">
        <h3 class="subheader">
          <small>{{tr "REAL CPU"}}</small>
        </h3>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns">
        <div class="large-12 columns centered graph vm_cpu_graph text-center" style="height: 100px;">
          <span  id="provision_dashboard_total" style="font-size:80px">
            <i class="fa fa-spinner fa-spin"></i>
          </span>
        </div>
      </div>
    </div>
  </div>
  <div class="medium-6 columns">
    <div class="row text-center">
      <h3 class="subheader">
        <small>{{tr "REAL MEMORY"}}</small>
      </h3>
    </div>
    <div class="row">
      <div class="large-12 columns centered graph vm_memory_graph text-center" style="height: 100px;">
        <span  id="provision_dashboard_total" style="font-size:80px">
          <i class="fa fa-spinner fa-spin"></i>
        </span>
      </div>
    </div>
  </div>
</div>
