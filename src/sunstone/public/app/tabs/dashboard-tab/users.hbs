<div>
  <fieldset class="large-font dashboard-fieldset">
    <div class="row small-12 medium-12 columns">
      <div class="small-6 medium-8 columns dashboard-div-titles">
        <h5>{{tr "System"}}</h5>
      </div>
      <div class="small-6 medium-4 columns dashboard-div-buttons">
        <button class="button radius tiny show_users_tab"> <i class="fas fa-lg fa-list fa-fw"></i></button>
        <button class="button success radius tiny show_create_user"> <i class="fas fa-lg fa-plus fa-fw"></i></button>
      </div>
    </div>
    <div class="row">
      <div class="card small-12 medium-6 columns">
        <h3 class="total_users fadeinout number-title">0</h3>
        <span class="small-12 medium-12 columns label-card" title="{{tr 'USERS'}}">
          {{tr "USERS"}}
        </span>
      </div>
      <div class="card small-12 medium-6 columns">
          <h3 class="total_groups fadeinout number-title">0</h3>
          <span class="small-12 medium-12 columns label-card" title="{{tr 'GROUPS'}}">
            {{tr "GROUPS"}}
          </span>
      </div>
    </div>
  </fieldset>
</div>

