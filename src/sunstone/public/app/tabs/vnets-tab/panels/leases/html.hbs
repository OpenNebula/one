<form id="leases_form">
  {{#isTabActionEnabled "vnets-tab" "Network.hold_lease"}}
    <div class="row">
      <div class="medium-4 columns">
        <input type="text" id="panel_hold_lease"/>
      </div>
      <div class="medium-8 columns end">
        <button class="button small secondary radius" id="panel_hold_lease_button">
          {{tr "Hold IP"}}
        </button>
      </div>
    </div>
  {{/isTabActionEnabled}}
  <div class="row">
    <div class="large-12 columns" style="overflow:auto">
      <table id="leases_datatable" class="datatable twelve">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th>{{tr "Status"}}</th>
            <th>{{tr "IP"}}</th>
            <th>{{tr "IPv6"}}</th>
            <th>{{tr "MAC"}}</th>
            <th>{{tr "IPv6 Link"}}</th>
            <th>{{tr "IPv6 ULA"}}</th>
            <th>{{tr "IPv6 Global"}}</th>
            <th>{{tr "Address Range"}}</th>
          </tr>
        </thead>
        <tbody>
          {{#each leases}}
          <tr ip="{{this.[2]}}" mac="{{this.[4]}}">
            {{#each this}}
            <td style="white-space: nowrap" class="value_td">{{{this}}}</td>
            {{/each}}
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</form>
