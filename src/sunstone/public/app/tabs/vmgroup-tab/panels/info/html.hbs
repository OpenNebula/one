<div class="row">
  <div class="large-6 columns">
    <table id="info_vm_group_table" class="dataTable">
      <thead>
         <tr>
          <th colspan="3">{{tr "Information"}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="key_td">{{tr "ID"}}</td>
          <td class="value_td" colspan="2">{{element.ID}}</td>
        </tr>
        <tr>
          <td class="key_td">{{tr "Name"}}</td>
          <td class="value_td" colspan="2">{{element.NAME}}</td>
        </tr>
        <tr>
          <td class="key_td">{{tr "Description"}}</td>
          <td class="value_td" colspan="2">{{element.TEMPLATE.DESCRIPTION}}</td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="large-6 columns">{{{permissionsTableHTML}}}</div>
</div>
<div class="row">
  <div class="large-9 columns">
    <table class="dataTable">
      <thead>
        <tr>
          <th>{{tr "Roles"}}</th>
        </tr>
      </thead>
     <tbody>
        <tr>
          <td>
            <table class="policies_table dataTable">
              <thead>
                <tr>
                  <th>{{tr "Name"}}</th>
                  <th>{{tr "Host Affined"}}</th>
                  <th>{{tr "Host Anti Affined"}}</th>
                  <th>{{tr "VM Affinity"}}</th>
                </tr>
              </thead>
              <tbody>
                {{#each roleList}}
                  <tr>
                    <td>{{NAME}}</td>
                    <td>{{HOST_AFFINED}}</td>
                    <td>{{HOST_ANTI_AFFINED}}</td>
                    <td>{{POLICY}}</td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="large-9 columns">
    <table class="dataTable">
      <thead>
        <tr>
          <th>{{tr "Roles Affinity"}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <table class="policies_table dataTable">
              <thead>
                <tr>
                  <th>{{tr "Roles"}}</th>
                  <th>{{tr "VM Affinity"}}</th>
                </tr>
              </thead>
              <tbody>
                {{#each roleAffinityList}}
                  <tr>
                    <td>{{ROLES}}</td>
                    <td>{{POLICY}}</td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>