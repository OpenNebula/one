<div class="row">
  <div class="large-6 columns">
    <table id="info_security_group_table" class="dataTable">
      <thead>
         <tr>
          <th colspan="3">{{tr "Information"}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="key_td">{{tr "ID"}}</td>
          <td class="value_td" colspan="2">{{element.ID}}</td>
        </tr>
        {{{renameTrHTML}}}
      </tbody>
    </table>
  </div>
  <div class="large-6 columns">
    {{{permissionsTableHTML}}}
  </div>
</div>
<div class="row">
  <div class="large-9 columns">
    <table class="dataTable">
      <thead>
        <tr>
          <th>{{tr "Rules"}}</th>
        </tr>
      </thead>
    </table>
    <table class="policies_table dataTable">
      <thead>
        <tr>
          <th>{{tr "Protocol"}}</th>
          <th>{{tr "Type"}}</th>
          <th>{{tr "Port Range"}}</th>
          <th>{{tr "Network"}}</th>
          <th>{{tr "ICMP Type"}}</th>
        </tr>
      </thead>
      <tbody>
        {{#each ruleList}}
          <tr>
            <td>{{PROTOCOL}}</td>
            <td>{{RULE_TYPE}}</td>
            <td>{{RANGE}}</td>
            <td>{{{NETWORK}}}</td>
            <td>{{ICMP_TYPE}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="large-9 columns">
    {{{templateTableHTML}}}
  </div>
</div>
