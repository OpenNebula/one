{{#unless allUpdated}}
<div class="row">
  <p>{{{tr "VMs marked with <i class='fas fa-exclamation-triangle'></i> are waiting to be updated with the latest rules:"}}}
</div>
{{/unless}}
<div class="row">
  <div class="large-12 columns">
    {{{vmsTableHTML}}}
  </div>
</div>
{{#unless allUpdated}}
<div class="row">
  <br/>
  <hr/>
  <p>{{tr "VMs in error. The update to the latest rules failed:"}}
</div>
<div class="row">
  <div class="large-12 columns">
    {{{errorTableHTML}}}
  </div>
</div>
{{/unless}}