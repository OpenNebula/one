Import('env')

po_bld = Builder(action = 'share/scons/po2json.rb $SOURCE > $TARGET',
                 suffix = '.js',
                 src_suffix = '.po')

env.Append(BUILDERS = {'Po' : po_bld})

env.Po('ca.po')
env.Po('cs_CZ.po')
env.Po('da.po')
env.Po('de.po')
env.Po('el_GR.po')
env.Po('en_US.po')
env.Po('es_ES.po')
env.Po('fa_IR.po')
env.Po('fr_FR.po')
env.Po('it_IT.po')
env.Po('ja.po')
env.Po('lt_LT.po')
env.Po('nl_NL.po')
env.Po('pl.po')
env.Po('pt_PT.po')
env.Po('pt_BR.po')
env.Po('ru_RU.po')
env.Po('sk_SK.po')
env.Po('zh_TW.po')
env.Po('zh_CN.po')

