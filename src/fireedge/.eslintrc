{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "*.js"
        ]
      }
    ],
    "default-case": 0
  },
  "settings": {
    "react" : {
      "version": "detect"
    },
    "import/resolver": {
      "alias": {
        "map": [
          ["client", "./src/client"],
          ["server", "./src/server"]
        ],
        "extensions": [".js"]
      }
    }
  }
}
