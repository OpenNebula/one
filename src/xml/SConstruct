Import('env')

lib_name='nebula_xml'

if env['parsers']=='yes':
    # LEX
    parser=env.Lex(
        source='expr_parser.l'
    )
    env.NoClean(parser)

    # BISON
    parser=env.Bison(
        source='expr_arith.y'
    )
    env.NoClean(parser)

    parser=env.Bison(
        source='expr_bool.y'
    )
    env.NoClean(parser)

source_files=['ObjectXML.cc',
              'expr_parser.c',
              'expr_bool.cc',
              'expr_arith.cc']

# Build library
env.StaticLibrary(lib_name, source_files)
