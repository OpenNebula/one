if [ -z "${ONE_LOCATION}" ]; then
    MAD_LOCATION=/usr/lib/one/mads
else
    MAD_LOCATION=$ONE_LOCATION/lib/mads
fi

export DRIVER_NAME="one_im_sh_${BASH_ARGV##* }"

exec $MAD_LOCATION/one_im_exec -l $*
