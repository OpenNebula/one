Import('env')

lib_name='nebula_parsers'

if env['parsers']=='yes':
    # LEX
    parser=env.Lex(
    source='template_parser.l'
    )

    parser=env.Lex(
    source='vm_var_parser.l'
    )

    parser=env.Lex(
    source='expr_parser.l'
    )
    env.NoClean(parser)

    # BISON
    parser=env.Bison(
        source='template_syntax.y'
    )

    parser=env.Bison(
    source='vm_var_syntax.y'
    )

    parser=env.Bison(
    source='vm_file_var_syntax.y'
    )

    parser=env.Bison(
    source='expr_arith.y'
    )

    parser=env.Bison(
    source='expr_bool.y'
    )
    env.NoClean(parser)

# Sources to generate the library
source_files=[
    'template_parser.cc',
    'template_syntax.cc',
    'vm_var_parser.cc',
    'vm_var_syntax.cc',
    'vm_file_var_syntax.cc',
    'expr_parser.cc',
    'expr_bool.cc',
    'expr_arith.cc',
    'mem_collector.cc'
]

# Build library
env.StaticLibrary(lib_name, source_files)
